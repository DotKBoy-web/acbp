{
  "$comment": "Patch to v1 schema: adds FORBID_IF_TIME_WINDOW + enumeration_limit_bits + optional explain.",
  "definitions": {
    "constraint": {
      "oneOf": [
        { "$ref": "#/definitions/implies" },
        { "$ref": "#/definitions/mutex" },
        { "$ref": "#/definitions/forbid_when" },
        { "$ref": "#/definitions/forbid_if_sql" },
        { "$ref": "#/definitions/forbid_if_time_window" }
      ]
    },
    "constraintBase": {
      "type": "object",
      "properties": { "explain": { "type": "string" } },
      "additionalProperties": true
    },
    "forbid_if_time_window": {
      "allOf": [
        { "$ref": "#/definitions/constraintBase" },
        {
          "type": "object",
          "required": ["type", "if_flag", "ref", "window"],
          "properties": {
            "type": { "const": "FORBID_IF_TIME_WINDOW" },
            "if_flag": { "type": "string" },
            "ref": { "type": "string", "description": "timestamp/timestamptz column name" },
            "window": {
              "type": "object",
              "required": ["before", "after"],
              "properties": {
                "before": { "type": "string", "description": "e.g., -2 hours" },
                "after":  { "type": "string", "description": "e.g., +6 hours" }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      ]
    }
  },
  "properties": {
    "enumeration_limit_bits": {
      "type": "integer",
      "minimum": 1,
      "maximum": 61,
      "description": "Guardrail for pre-enumeration; fallback to validators if exceeded."
    }
  }
}
